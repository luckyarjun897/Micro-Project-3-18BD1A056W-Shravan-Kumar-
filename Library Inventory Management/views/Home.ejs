<html>
<head>
  <meta charset="utf-8">
  
  <title>Library</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  <link rel="stylesheet" href="Input.css">
 
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="booklogo.png"
				   alt="Fashion Feet Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Library</span>
			</a>
			<!-- Sidebar -->
			<nav class="mt-2">
				<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
					<li class="nav-item">
						<a href="/create" class="nav-link">
							<i class="nav-icon far fa-circle text-info"></i>
							<p>Add Book</p>
						</a>
					</li>
					<li class="nav-item">
						<a href="/sales" class="nav-link">
							<i class="nav-icon far fa-circle text-info"></i>
							<p class="text">Sales Details</p>
						</a>
					</li>
					<li class="nav-item">
						<a href="/updatesale" class="nav-link">
							<i class="nav-icon far fa-circle text-info"></i>
							<p class="text">Update Sales</p>
						</a>
					</li>
	  
				</ul>
			</nav>
			<!-- /.sidebar -->
		</aside>
		
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Library Inventory Management</h1>
			</section>
			
			<section class="content">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Books Details</h3>
						
						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
							<i class="fas fa-minus"></i></button>
							<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
							<i class="fas fa-times"></i></button>
						</div>
						<div class="card-body table-responsive p-0" style="height: 600px;">
							<table class="table table-striped table-head-fixed text-nowrap" >
							<thead>
								<tr>
									<th style="width: 10%" >Book ID</th>
									<th style="width: 10%" >Category</th>
									<th style="width: 10%" >Name</th>
									<th style="width: 10%" >Author</th>
									<th style="width: 10%" >Language</th>
									<th style="width: 15%" >Quantity</th>
									<th style="width: 10%" >Price</th>
									<th style="width: 15%" ></th>
									<th style="width: 15%" ></th>
								</tr>
							</thead>
							<tbody>
								<% for(var i=0;i<data.length;i++) { %>
								<tr>
									<td><%= data[i].BookId %></td>
									<td><%= data[i].Category %></td>
									<td><%= data[i].Name %></td>
									<td><%= data[i].Author %></td>
									<td><%= data[i].Language %></td>
									<td><%= data[i].Quantity %>
									<!---	<div class="progress progress-xs">
											<div class="progress-bar bg-danger" style="width:20%"></div>
										</div>
										<small><%= data[i].Quantity %></small>-->
									</td>
									<td><%= data[i].Price %></td>
									<td class="project-actions text-right">
										<a class="btn btn-info btn-sm" href=<%="/edit?BookId="+ data[i].BookId %>><i class="fas fa-pencil-alt"></i>Edit</a>	
									</td>
									<td class="project-actions text-right">
											<form action='/delete' method="post">
												<a class="btn btn-danger btn-sm"><i class="fas fa-trash">
													<input type="hidden" name="BookId" value=<%= data[i].BookId %>>
													<input class="delete" type="submit" value="Delete">
												</i></a>
												<!--<input type="hidden" name="BookId" value=<%= data[i].BookId %>>
												<input class="delete" type="submit" value="Delete">-->
											</form>	
									</td>	
								</tr>
								<% } %>
							</tbody>	
							</table>
						</div>
					</div>
					
				</div>
			</section>
		</div>
		
	</div>
</body>
</html>